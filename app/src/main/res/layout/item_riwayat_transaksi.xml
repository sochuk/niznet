<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item_trx"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="12dp">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:id="@+id/ll_item_trx">

        <ImageView
            android:id="@+id/iv_item_riwayat_trx"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/dark_gray"
            android:background="@drawable/rect_pink_border_viewline"/>

        <LinearLayout
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_marginLeft="19dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/cabin_medium"
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_kd_trx"
                    android:layout_height="wrap_content"
                    android:text="Kode pesanan"
                    android:textSize="9sp"
                    android:textColor="@color/dark_gray"/>
                <TextView
                    android:id="@+id/tv_code_checkout"
                    android:fontFamily="@font/cabin_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2323213213"
                    android:layout_marginBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/cabin_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal pesanan"
                    android:textSize="9sp"
                    android:textColor="@color/dark_gray"/>
                <TextView
                    android:id="@+id/tv_tgl_trx"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/cabin_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identification number, profile image, â€¦"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingRight="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_status_trx"
                android:layout_gravity="right"
                android:drawableLeft="@drawable/ic_circle"
                android:drawablePadding="8dp"
                android:drawableTint="@color/dark_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Updated"
                android:textColor="@color/dark_gray"
                android:textSize="12sp" />


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tv_total_harga_cart"
                android:fontFamily="@font/cabin_bold"
                android:textColor="#fd5018"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="Rp23920390"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>