<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_item_product"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    android:layout_marginRight="16dp"
    app:cardCornerRadius="7dp"
    android:layout_weight="1"
    android:layout_marginBottom="14dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="14.5dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="230dp"/>

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:fontFamily="@font/cabin_semibold"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="5 Easy Week nightDinners"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="13dp"
            android:fontFamily="@font/cabin_bold"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:text="5 Easy Week nightDinners"
            android:textColor="@color/drak_gray"
            android:textSize="9sp"/>
        <TextView
            android:id="@+id/tv_category_product"
            android:layout_width="wrap_content"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:fontFamily="@font/cabin_semibold"
            android:gravity="center"
            android:text="Body"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="10sp" />

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_harga_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:elevation="3dp"
                android:paddingRight="10dp"
                android:text="20-oktober-2019"
                android:fontFamily="@font/cabin_semibold"
                android:textColor="#fd5018"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tint="@android:color/holo_blue_dark"
                android:src="@drawable/ic_brand" />
            <TextView
                android:id="@+id/tv_brand_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/cabin_semibold"
                android:gravity="center"
                android:text="Lotion"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>