<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_pop_category"
    android:clickable="true"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="5dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/transparent"
            android:clickable="true"
            android:id="@+id/cv_category_home"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/rl_bg_icon_pop_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff2d1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_pop_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="3dp"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_analytics" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_pop_category"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/cabin_semibold"
            android:layout_marginTop="5dp"
            android:text="balik bos"
            android:textAlignment="center"
            android:textColor="@color/drak_gray"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>