<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.RiwayatTransaksiPage.RiwayatTransaksiActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_list_riwayat_transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="5dp"
        android:fitsSystemWindows="false"
        android:gravity="top"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_back_riwayat_transaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.5dp"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:tint="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pesanan_saya"
            android:fontFamily="@font/cabin_medium"
            android:textColor="@color/black"
            android:layout_marginTop="-1dp"
            android:textSize="18.5sp"
            android:layout_marginLeft="18.5dp"/>
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_status_riwayat_transaksi"
        android:layout_width="match_parent"
        android:background="@drawable/bg_tablayout"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/viewParent.tabText"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


    <!-- View pager to swipe views -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_riwayat_transaksi"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="fill_parent"/>
</LinearLayout>